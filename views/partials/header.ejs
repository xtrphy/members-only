<header class="header">
    <div>
        <a href="/" class="logo">XTRPHY</a>
    </div>

    <% if (isAuthenticated && user.role==='member' ) { %>
        <div>
            <a href="/club" class="posts">Posts</a>
        </div>
        <% } %>

            <% if (isAuthenticated) { %>
                <form class="log-form" action="/log-out" method="post">
                    <i class="fa-solid fa-user" style="color: #ffffff; cursor: pointer; font-size: 18px;"></i>
                    <button class="log-btn" type="submit">Log Out</button>
                </form>
                <% } else { %>
                    <a class="log-btn" href="/log-in">Log In</a>
                    <% } %>
</header>